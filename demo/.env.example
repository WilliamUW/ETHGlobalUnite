# Demo Configuration for 1inch Cross-Chain Fusion+ Extension
# Copy this file to .env.local and fill in your configuration

# Ethereum Configuration (Testnet recommended for demo)
NEXT_PUBLIC_ETH_RPC_URL=https://eth-sepolia.public.blastapi.io
NEXT_PUBLIC_ETH_CROSS_CHAIN_RESOLVER_ADDRESS=0x...
ETH_PRIVATE_KEY=your_private_key_here

# NEAR Configuration (Testnet)
NEXT_PUBLIC_NEAR_NETWORK=testnet
NEXT_PUBLIC_NEAR_NODE_URL=https://rpc.testnet.near.org
NEXT_PUBLIC_NEAR_ESCROW_CONTRACT_ID=your-contract.testnet
NEAR_ACCOUNT_ID=your-account.testnet
NEAR_PRIVATE_KEY=your_near_private_key_here

# Aptos Configuration (Testnet)
NEXT_PUBLIC_APTOS_NETWORK=testnet
NEXT_PUBLIC_APTOS_NODE_URL=https://fullnode.testnet.aptoslabs.com
NEXT_PUBLIC_APTOS_ESCROW_ADDRESS=0x...
APTOS_PRIVATE_KEY=your_aptos_private_key_here
APTOS_ACCOUNT_ADDRESS=your_aptos_account_address_here

# Demo Mode Settings
NEXT_PUBLIC_DEMO_MODE=true
NEXT_PUBLIC_ENABLE_REAL_SWAPS=true
NEXT_PUBLIC_MOCK_BALANCES=true

# Development Settings
NODE_ENV=development
NEXT_PUBLIC_DEBUG=true